@model JueriOnlineShop.Models.Produs

@{
    ViewData["Title"] = "Details";
}
<link rel="stylesheet" href="~/css/vizualizare-produs.css" />
<h1 class="alert alert-info">Vizualizare produs</h1>
<hr/>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.numeProdus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.numeProdus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.descriereProdus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.descriereProdus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.pretProdus)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.pretProdus)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.photoURL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.photoURL)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.idProdus" class="alert alert-info">Editare produs</a>
        <a>|</a>
    }
    <a asp-action="Index" class="alert alert-info">Inapoi la pagina cu produse</a>
</div>
