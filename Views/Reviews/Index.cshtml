@model IEnumerable<JueriOnlineShop.Models.Review>

@{
    ViewData["Title"] = "Index";
}
<link rel="stylesheet" href="~/css/reviews.css" />
<h1 >Lasa un review</h1>

<head>
    <!-- Font Awesome Icon Library -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>
        .checked {
            color: orange;
        }
    </style>
</head>

<p >
    <a asp-action="Create" class="alert alert-info">Adauga un review</a>
</p>
<br/>
<table class="table table-striped table-dark">
    <thead class="table-primary">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.detalii)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.detalii)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.idReview">Editeaza review-ul</a> |
                <a asp-action="Delete" asp-route-id="@item.idReview">Sterge review-ul</a>
            </td>
        </tr>
}
    </tbody>
</table>

<span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
<span class="fa fa-star checked"></span>
